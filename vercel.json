{
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ],
  "builds": [
    { "src": "frontend/dist/**", "use": "@vercel/static" },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.ts" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ]
}
